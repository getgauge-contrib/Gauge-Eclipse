grammar io.getgauge.Spec 
import "http://www.eclipse.org/emf/2002/Ecore" as ecore

generate spec "http://www.getgauge.io/Spec"

Model:
	definitions+=AbstractEntity (Comment? AbstractEntity)*
;

AbstractEntity:
	(Spec | Scenario | Step) | Comment
;

Spec:
	'# ' name=LINE_TEXT
;

Scenario:
	'## ' name=LINE_TEXT
;

Step:
	'* ' name=LINE_TEXT
;

Comment:
	text+=LINE_TEXT
;

terminal SINGLE_NL:
	'\r'? '\n'
;

terminal LINE_TEXT:
	!('#' | '*') -> SINGLE_NL+
;