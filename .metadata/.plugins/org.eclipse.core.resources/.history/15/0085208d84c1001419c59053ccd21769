grammar io.getgauge.Spec 
import "http://www.eclipse.org/emf/2002/Ecore" as ecore

generate spec "http://www.getgauge.io/Spec"

Model:
  entities+=Entity*;

Entity:
  Section | Subsection | Paragraph
;

Section:
  '#'
    content+=TextPart
  (SINGLE_NL | MULTI_NL)
;

Subsection:
  '##'
    content+=TextPart
  (SINGLE_NL | MULTI_NL)
;

Paragraph:
  content+=TextPart
;

TextPart:
  text=Text
;

Text:
        (ID | WS | SINGLE_NL | MULTI_NL | ANY_OTHER | ',' | "-" )+;


terminal ID:
        ('a'..'z' | 'A'..'Z' | '_') ('a'..'z' | 'A'..'Z' | '_' | '0'..'9')*;

terminal SL_COMMENT:
        '%%' !('\n' | '\r')* ('\r'? '\n');

terminal MULTI_NL:
        '\r'? '\n' (/*(' ' | '\t')**/ '\r'? '\n')+;

terminal SINGLE_NL:
        '\r'? '\n';

terminal WS:
        ' ' | '\t';

terminal ANY_OTHER:
        .;