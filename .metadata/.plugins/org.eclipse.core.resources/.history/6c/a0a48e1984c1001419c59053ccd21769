grammar io.getgauge.Spec 
import "http://www.eclipse.org/emf/2002/Ecore" as ecore

generate spec "http://www.getgauge.io/Spec"

Spec:
	('# ' title=TextPart SINGLE_NL)
	{Spec}
	(MULTI_NL scenarios+=Scenario)*
	(MULTI_NL contents+=TextPart)*
;

Scenario:
	('## ' title=TextPart SINGLE_NL)
	{Scenario}
	(MULTI_NL steps+=Step)* 
;

Step:
	('* ' title=TextPart SINGLE_NL)
;

//Comment:
//	{Spec} ({Comment.elements+=current})*
//;


TextPart:
	text=Text;

Text:
	(ID | WS | ANY_OTHER | ',' | "-")+;

terminal ID:
	('a'..'z' | 'A'..'Z' | '_') ('a'..'z' | 'A'..'Z' | '_' | '0'..'9')*;

terminal MULTI_NL:
	'\r'? '\n' ('\r'? '\n')+;

terminal SINGLE_NL:
	'\r'? '\n';

terminal WS:
	' ' | '\t';

terminal ANY_OTHER:
	.;