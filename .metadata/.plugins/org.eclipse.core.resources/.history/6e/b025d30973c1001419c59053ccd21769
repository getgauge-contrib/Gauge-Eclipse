grammar io.getgauge.Spec 
import "http://www.eclipse.org/emf/2002/Ecore" as ecore

generate spec "http://www.getgauge.io/Spec"

Spec:
	spec=SL_SPEC 
;

Scenario:
	scenario=SL_SCENARIO EOL* 
	(steps+=Step)* 
;

Step:
	step=SL_STEP EOL*
;

//Comment:
//	{Spec} ({Comment.elements+=current})*
//;

ANY_WS:
	MULTI_NL | SINGLE_NL | WS;

terminal SL_SPEC 	: '# ' -> EOL;
terminal EOL : ('\r')? '\n';
terminal SL_SCENARIO 	: '## ' -> EOL;
terminal ML_SPEC 	: !('\n'|'\r')* EOL '-'+ EOL;
terminal SL_STEP		: '* ' -> EOL;
terminal LINE: !('#' | '##' | '*') -> EOL;


terminal ID:
	('a'..'z' | 'A'..'Z' | '_') ('a'..'z' | 'A'..'Z' | '_' | '0'..'9')*;

terminal MULTI_NL:
	'\r'? '\n' (/*(' ' | '\t')**/ '\r'? '\n')+;

terminal SINGLE_NL:
	'\r'? '\n';

terminal WS:
	' ' | '\t';

terminal ANY_OTHER:
	.;
	