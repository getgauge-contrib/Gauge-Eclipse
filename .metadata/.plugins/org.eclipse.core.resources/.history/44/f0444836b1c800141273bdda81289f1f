grammar io.getgauge.Spec 
import "http://www.eclipse.org/emf/2002/Ecore" as ecore

generate spec "http://www.getgauge.io/Spec"

Model:
	definitions+=AbstractEntity*
;

AbstractEntity:
	(Spec | Scenario | Step) | Comment
;

Spec:
	'# ' name=(WORD | SENTENCE) EOL+
;

Scenario:
	'## ' name=(WORD | SENTENCE) EOL+
;

Step:
	{Step}
	'* ' (((params+=StaticParam) | WORD_CONJUNCTION ) WS?)+ EOL+
;

Comment:
	text+=(WORD | WS)+ EOL+
;

terminal EOL:
	'\r'? '\n'
;

StaticParam:
	value=STATIC_PARAM
;

terminal STATIC_PARAM:
	'"' (WORD|WS)* '"'
;

terminal WORD: ('a'..'z'|'A'..'Z'|'_') ('a'..'z'|'A'..'Z'|'_'|'0'..'9')*;

terminal WS:
	' ' | '\t'
;

terminal WORD_CONJUNCTION:
	WORD | WS | ',' | ';' | '.' | '\'' | '"' | '!' | '#' | '*'
;
terminal SENTENCE:
	WORD WORD_CONJUNCTION*
;