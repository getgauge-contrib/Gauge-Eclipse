grammar io.getgauge.Spec 
import "http://www.eclipse.org/emf/2002/Ecore" as ecore

generate spec "http://www.getgauge.io/Spec"

Spec:
	('# ' title=TextPart SINGLE_NL) 
	(MULTI_NL scenarios+=Scenario)*
	(MULTI_NL comments+=TextPart)*
;

Scenario:
	('## ' title=TextPart SINGLE_NL)
	(MULTI_NL steps+=Step)* 
	(MULTI_NL comments+=TextPart)*
;

Step:
	('* ' title=TextPart SINGLE_NL)
	(MULTI_NL comments+=TextPart)*	
;

TextPart:
	text=Text;

Text:
	(ID | WS | SINGLE_NL | ANY_OTHER | '\\[' | '\\]' | ',' | "-" | '\\:' | '\\%')+;

terminal ID:
	('a'..'z' | 'A'..'Z' | '_') ('a'..'z' | 'A'..'Z' | '_' | '0'..'9')*;

terminal MULTI_NL:
	'\r'? '\n' (/*(' ' | '\t')**/ '\r'? '\n')+;

terminal SINGLE_NL:
	'\r'? '\n';

terminal WS:
	' ' | '\t';

terminal ANY_OTHER:
	.;
	