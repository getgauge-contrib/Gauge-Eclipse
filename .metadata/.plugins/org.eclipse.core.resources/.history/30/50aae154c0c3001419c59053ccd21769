grammar io.getgauge.Spec 
import "http://www.eclipse.org/emf/2002/Ecore" as ecore

generate spec "http://www.getgauge.io/Spec"

Model:
	definitions+=AbstractEntity;

AbstractEntity:
	Spec | Scenario | Step | Paragraph;

Paragraph:
	{Paragraph}
	text+=LINE_TEXT*;

Spec:
	'# ' name+=LINE_TEXT (SINGLE_NL | MULTI_NL)
	scenarios+=(Scenario|Step)*;

Scenario:
	'## ' name+=LINE_TEXT (SINGLE_NL | MULTI_NL);

Step:
	'* ' name+=LINE_TEXT (SINGLE_NL | MULTI_NL);

terminal ID:
	('a'..'z' | 'A'..'Z' | '_') ('a'..'z' | 'A'..'Z' | '_' | '0'..'9')*;

terminal STRING	: 
	('"'|'\'') ( '\\' . /* 'b'|'t'|'n'|'f'|'r'|'u'|'"'|"'"|'\\' */ | !('\\'|'"') )* ('"' | '\''); 

terminal SINGLE_NL:
	'\r'? '\n';

terminal MULTI_NL:
	SINGLE_NL (SINGLE_NL)+;

terminal WS:
	' ' | '\t';

terminal ANY_OTHER:
	.;