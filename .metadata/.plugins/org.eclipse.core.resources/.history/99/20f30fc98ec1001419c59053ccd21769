grammar io.getgauge.Spec 
import "http://www.eclipse.org/emf/2002/Ecore" as ecore

generate spec "http://www.getgauge.io/Spec"

//Model:
//	text+=(AbstractEntity | Paragraph)
//;

AbstractEntity:
	{AbstractEntity}
	Spec | Scenario | Step | LineText
;

Spec:
	('# ' name=LineText (SINGLE_NL|MULTI_NL))
	scenarios+=(Scenario|Step)*
;

Scenario:
	('## ' name=LineText (SINGLE_NL|MULTI_NL))
;

Step:
	('* ' name=LineText (SINGLE_NL|MULTI_NL))
;

Paragraph:
	text+=LineText;

LineText:
	(ID | WS | ANY_OTHER | ',' | "-")+;

terminal ID:
	('a'..'z' | 'A'..'Z' | '_') ('a'..'z' | 'A'..'Z' | '_' | '0'..'9')*;

terminal MULTI_NL:
	'\r'? '\n' ('\r'? '\n')+;

terminal SINGLE_NL:
	'\r'? '\n';

terminal WS:
	' ' | '\t';

terminal ANY_OTHER:
	.;