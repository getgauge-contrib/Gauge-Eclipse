grammar io.getgauge.Spec 
import "http://www.eclipse.org/emf/2002/Ecore" as ecore

generate spec "http://www.getgauge.io/Spec"

Model:
	definitions+=AbstractEntity*;

AbstractEntity:
	Spec | Scenario | Step | Paragraph;

Spec:
	'#' name=LineText (SINGLE_NL | MULTI_NL)
	scenarios+=(Scenario|Step)*;

Scenario:
	'##' name=LineText (SINGLE_NL | MULTI_NL);

Step:
	'*' name=LineText (SINGLE_NL | MULTI_NL);

LineText:
	ANY_OTHER -> SINGLE_NL;

Paragraph:
	text+=LineText;

terminal SINGLE_NL:
	'\r'? '\n';

terminal MULTI_NL:
	SINGLE_NL (SINGLE_NL)+;

terminal WS:
	' ' | '\t';

terminal ANY_OTHER:
	.;