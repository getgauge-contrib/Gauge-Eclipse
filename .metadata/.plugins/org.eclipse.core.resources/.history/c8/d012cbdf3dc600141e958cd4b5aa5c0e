grammar io.getgauge.Spec 
import "http://www.eclipse.org/emf/2002/Ecore" as ecore

generate spec "http://www.getgauge.io/Spec"

Model:
	definitions+=AbstractEntity*
;

AbstractEntity:
	Spec | Scenario | Step | Comment | BlankLine
;

Spec:
	'# ' name=LINE_TEXT
;

Scenario:
	'## ' name=LINE_TEXT
;

Step:
	'* ' (ANY_OTHER+ STATIC_PARAM)*
;

Comment:
	text=LINE_TEXT
;

BlankLine:
	SINGLE_NL|MULTI_NL
;

StaticParam:
	name=STATIC_PARAM
;

terminal STATIC_PARAM:
	'"'->'"'
;

terminal MULTI_NL:
	SINGLE_NL SINGLE_NL+
;

terminal SINGLE_NL:
	'\r'? '\n'
;

terminal LINE_TEXT:
	!('#'|'*'|'\r'|'\n') -> SINGLE_NL
;

terminal ANY_OTHER:
	.
;