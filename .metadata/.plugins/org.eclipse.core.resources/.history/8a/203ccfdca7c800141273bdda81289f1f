grammar io.getgauge.Spec 
import "http://www.eclipse.org/emf/2002/Ecore" as ecore

generate spec "http://www.getgauge.io/Spec"

Model:
	definitions+=AbstractEntity*
;

AbstractEntity:
	Step
;

Spec:
	'# ' name=(WORD|SENTENCE) SINGLE_NL+
;

Scenario:
	'## ' name=(WORD|SENTENCE) SINGLE_NL+
;

Step:
	{Step}
	'* ' ((text+=WordPart | params+=StaticParam) WS?)+SINGLE_NL+
;

StaticParam:
	value=STATIC_PARAM
;

Comment:
	text=(WORD|SENTENCE) SINGLE_NL+
;

WordPart:
	value=(WORD|WS)
;

terminal SINGLE_NL:
	'\r'? '\n'
;

terminal STATIC_PARAM:
	'"' -> '"'
;

terminal WORD: ('a'..'z'|'A'..'Z'|'_') ('a'..'z'|'A'..'Z'|'_'|'0'..'9')*;

terminal WS:
	' ' | '\t'
;

terminal WORD_CONJUNCTION:
	WORD | WS | ',' | ';' | '.' | '\'' | '"' | '!' | '#' | '*'
;
terminal SENTENCE:
	WORD WORD_CONJUNCTION*
;