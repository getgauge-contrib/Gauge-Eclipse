grammar io.getgauge.Spec 
import "http://www.eclipse.org/emf/2002/Ecore" as ecore

generate spec "http://www.getgauge.io/Spec"

Model:
	definitions+=AbstractEntity*;

AbstractEntity:
	Spec | Scenario | Step | Paragraph;

Spec:
	'#' name=LineText
	scenarios+=(Scenario|Step)*;

Scenario:
	'##' name=LineText;

Step:
	'*' name=LineText ;

LineText:
	PARA;

Paragraph:
	text+=PARA;

terminal SINGLE_NL:
	'\r'? '\n';

terminal MULTI_NL:
	SINGLE_NL (SINGLE_NL)+;

terminal WS:
	' ' | '\t';

terminal SPEC_DEF:
	'#' -> SINGLE_NL;

terminal SCENARIO_DEF:
	'##' -> SINGLE_NL;

terminal STEP_DEF:
	'*' -> SINGLE_NL;

terminal PARA:
	!(SPEC_DEF|SCENARIO_DEF|STEP_DEF);

terminal ANY_OTHER:
	.;