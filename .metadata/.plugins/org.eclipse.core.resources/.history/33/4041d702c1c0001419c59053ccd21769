grammar io.getgauge.Spec with org.eclipse.xtext.common.Terminals
import "http://www.eclipse.org/emf/2002/Ecore" as ecore

generate spec "http://www.getgauge.io/Spec"

Spec:
	spec=SL_SPEC EOL (scenarios+=Scenario)*
;

Scenario:
	scenario=SL_SCENARIO EOL (steps+=Step)*
;

Step:
	step=SL_STEP
;

terminal SL_SPEC 	: '# ' -> '\n';
terminal SL_SCENARIO 	: '## ' -> '\n';
terminal ML_SPEC 	: !('\n'|'\r')* EOL '-'+ EOL;
terminal SL_STEP		: '* ' -> EOL;
terminal EOL : ('\r')? '\n';