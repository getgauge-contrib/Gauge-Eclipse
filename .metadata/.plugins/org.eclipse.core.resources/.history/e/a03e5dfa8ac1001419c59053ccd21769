grammar io.getgauge.Spec 
import "http://www.eclipse.org/emf/2002/Ecore" as ecore

generate spec "http://www.getgauge.io/Spec"

Model:
	AbstractEntity | Paragraph	
;

AbstractEntity:
	Spec | Scenario | Step
;

Spec:
	('# ' title=Paragraph (SINGLE_NL|MULTI_NL))
	scenarios+=Scenario*
;

Scenario:
	('## ' title=Paragraph (SINGLE_NL|MULTI_NL))
	(steps+=Step)*
;

Step:
	('* ' title=Paragraph (SINGLE_NL|MULTI_NL))
;

//Comment:
//	{Spec} ({Comment.elements+=current})*
//;


Paragraph:
	text+=LineText;

LineText:
	(ID | WS | ANY_OTHER | ',' | "-")+;

terminal ID:
	('a'..'z' | 'A'..'Z' | '_') ('a'..'z' | 'A'..'Z' | '_' | '0'..'9')*;

terminal MULTI_NL:
	'\r'? '\n' ('\r'? '\n')+;

terminal SINGLE_NL:
	'\r'? '\n';

terminal WS:
	' ' | '\t';

terminal ANY_OTHER:
	.;