grammar io.getgauge.Spec
import "http://www.eclipse.org/emf/2002/Ecore" as ecore

generate spec "http://www.getgauge.io/Spec"

Spec:
	'# ' name=SENTENCE
	entities+=Entity*
;

Entity:
	Scenario | Step
;

Scenario:
	'## ' name=SENTENCE
	steps+=Step*
;

Step:
	name='* '
;

terminal WORD  		: '^'?('a'..'z'|'A'..'Z'|'_') ('a'..'z'|'A'..'Z'|'_'|'0'..'9')*;
terminal SENTENCE : (WORD (' '|'\t')?)*;

//terminal STEP_DEF : ('* ' .+) ('\r'? '\n');
//terminal SPEC_DEF : '# ' (ID (' '|'\t')?)+('\r'? '\n');
//terminal SCENARIO_DEF : '## ' (ID (' '|'\t')?)+('\r'? '\n')?;
